{% macro hero(title, subtitle) %}
    <!-- Hero Section -->
    <div class="container mx-auto flex-1 mt-8 p-2 md:p-4 text-center md:w-1/2">
        <h1 class="text-4xl font-bold mb-2">{{ title }}</h1>
        <p class="text-lg">{{ subtitle }}</p>
        {{ caller() }}
    </div>
{% endmacro %}

{% macro section_header(title) %}
    <div class="container mx-auto flex-1 mt-8 p-2 md:p-4 text-center md:w-1/2">
        <h1 class="text-2xl font-bold mb-2">{{ title }}</h1>
    </div>
{% endmacro %}

{% macro project_card(main_link, link_opts, img_link, title, body, contributions_link) %}
    <div class="flex flex-col md:flex-row items-center bg-white border border-gray-200 rounded-lg shadow md:max-w-xl hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700 m-4">
        <a href="{{ main_link }}" {{ link_opts }} class="flex flex-col md:flex-row items-center">
            {% if img_link %}
                <img class="object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-l-lg" src="{{ img_link }}" alt="">
            {% else %}
                <div class="object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-l-lg"></div>
            {% endif %}
            <div class="flex flex-col justify-between p-4 leading-normal">
                <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{ title }}</h5>
                <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{{ body }}</p>
            </div>
        </a>
        <div class="flex flex-col justify-center p-4 leading-normal">
            <!-- Buttons for card -->
            {% if contributions_link %}
                <a href="{{contributions_link}}" target="_blank">
                    <svg class="w-10 h-10" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><path fill-rule="evenodd" clip-rule="evenodd" d="M7 8.83a3.001 3.001 0 1 0-2 0v6.34a3.001 3.001 0 1 0 2 0V8.83ZM6 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2Zm0 12a1 1 0 1 0 0 2 1 1 0 0 0 0-2ZM17 15.17a3.001 3.001 0 1 0 2 0V10.4A5.4 5.4 0 0 0 13.6 5h-.186l.293-.293a1 1 0 0 0-1.414-1.414l-2 2a1 1 0 0 0 0 1.414l2 2a1 1 0 1 0 1.414-1.414L13.414 7h.186a3.4 3.4 0 0 1 3.4 3.4v4.77ZM17 18a1 1 0 1 1 2 0 1 1 0 0 1-2 0Z" fill="#000000"></path></g></svg>
                </a>
            {% endif %}
        </div>
    </div>
{% endmacro %}