{% macro hero(title, subtitle, tags, info, img) %}
    <!-- Hero Section -->
    <div class="container mx-auto flex flex-row mt-8 p-2 md:p-4 md:w-1/2">
        <img src="{{ url_for('static', filename='images/{{ img }}') }}" class="w-16 h-16" alt="Blog Icon" />
        <div class="flex flex-col justify-center ml-4">
            <h1 class="text-4xl font-bold mb-2">{{ title }}</h1>
            <p class="text-lg">{{ subtitle }}</p>
            <div class="flex flex-row mt-2">
                {% for tag in tags %}
                    <span class="text-sm bg-gray-200 text-gray-800 rounded-full px-2 py-1 mr-2">{{ tag }}</span>
                {% endfor %}
            </div>
        </div>
    </div>
{% endmacro %}